    <script>
        $(document).ready(function () {
            // Initially hide both attendance forms
            $('.attendance-form').hide();
            $('#yesbutton2').hide();
            $('#nobutton2').hide();

            // Handle the click event for the "No" button
            $('#nobutton').click(function (event) {
                event.preventDefault(); // Prevent the default form submission behavior
                $('.attendence-declined').show();
                $('#yesbutton2').hide();
                $('#nobutton').hide();
                $('.attendence-accepted').hide();
                $('#pso').hide();


            });
            $('#nobutton2').click(function (event) {
                event.preventDefault(); // Prevent the default form submission behavior
                $('.attendence-declined').show();
                $('#yesbutton2').show();
                $('#nobutton2').hide();
                $('.attendence-accepted').hide();
                $('#pso').hide();

            });

            // Handle the click event for the "Yes" button
            $('#yesbutton').click(function (event) {
                event.preventDefault(); // Prevent the default form submission behavior
                $('.attendence-accepted').show();
                $('#nobutton').hide();
                $('#nobutton2').show();
                $('#yesbutton').hide();
                $('.attendence-declined').hide();
                $('#pso').hide();

            });
            $('#yesbutton2').click(function (event) {
                event.preventDefault(); // Prevent the default form submission behavior
                $('.attendence-accepted').show();
                $('#nobutton2').show();
                $('#nobutton').hide();
                $('#yesbutton').hide();
                $('#yesbutton2').hide();
                $('.attendence-declined').hide();
                $('#pso').hide();

            });
        });
    </script>
